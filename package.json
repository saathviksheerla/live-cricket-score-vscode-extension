{
  "name": "live-cricket-score",
  "displayName": "Live Cricket Score",
  "publisher": "saathvik",
  "icon": "images/logo.png",
  "description": "Get live cricket scores right in your VS Code editor",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saathviksheerla/live-cricket-score-vscode-extension.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "keywords": [
    "cricket",
    "sports",
    "live scores",
    "entertainment"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cricketScore.showMatches",
        "title": "Show Live Cricket Matches",
        "category": "Cricket"
      },
      {
        "command": "cricketScore.selectMatch",
        "title": "Select Cricket Match",
        "category": "Cricket"
      },
      {
        "command": "cricketScore.refreshMatches",
        "title": "Refresh Cricket Matches",
        "category": "Cricket"
      },
      {
        "command": "cricketScore.stopAutoRefresh",
        "title": "Stop Cricket Auto-refresh",
        "category": "Cricket"
      },
      {
        "command": "cricketScore.openWebview",
        "title": "Open Cricket Webview",
        "category": "Cricket"
      }
    ],
    "configuration": {
      "title": "Live Cricket Score",
      "properties": {
        "cricketScore.refreshRate": {
          "type": "number",
          "default": 30,
          "description": "Auto-refresh interval in seconds",
          "minimum": 5
        },
        "cricketScore.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show cricket scores in status bar"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.5.0"
  }
}
